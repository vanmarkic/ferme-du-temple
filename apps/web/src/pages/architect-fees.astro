    copyCode: "Code kopiëren",
    copied: "Gekopieerd!",
    npmPackage: "npm-pakket",
    npmText: "Gebruik het architect-fees-be pakket in uw TypeScript/JavaScript projecten:",
    credits: "Credits",
    creditsText: "Deze calculator implementeert de formule van de BRADA-studie (2016), een uitgebreid onderzoek naar de werklast en honorariumstructuren van Belgische architecten.",
    formulaCredits: "Formule en coëfficiënten: BRADA-studie /",
    originalReport: "Origineel rapport:",
  },
  en: {
    title: "Architect Fee Calculator",
    subtitle: "Based on BRADA methodology",
    howItWorks: "How it works",
    howItWorksText: "This calculator uses the dual-approach methodology from the BRADA study (Belgian Research on Architects' Design Activities):",
    surfaceEstimate: "Surface-based estimation",
    surfaceEstimateDesc: "calculates hours based on building surface area",
    costEstimate: "Cost-based estimation",
    costEstimateDesc: "calculates hours based on construction budget",
    finalFee: "The final fee is the average of both approaches, multiplied by the hourly rate.",
    embedWidget: "Embed widget",
    embedText: "Copy this code to embed the calculator on your website:",
    copyCode: "Copy code",
    copied: "Copied!",
    npmPackage: "npm package",
