    originalReport: "Rapport original:",
  },
  nl: {
    title: "Architect Honorarium Calculator",
    subtitle: "Gebaseerd op de BRADA-methodologie",
    howItWorks: "Hoe het werkt",
    howItWorksText: "Deze calculator gebruikt de dubbele-benadering methodologie van de BRADA-studie (Belgian Research on Architects' Design Activities):",
    surfaceEstimate: "Schatting op basis van oppervlakte",
    surfaceEstimateDesc: "berekent uren op basis van de gebouwoppervlakte",
    costEstimate: "Schatting op basis van kosten",
    costEstimateDesc: "berekent uren op basis van het bouwbudget",
    finalFee: "Het uiteindelijke honorarium is het gemiddelde van beide benaderingen, vermenigvuldigd met het uurtarief.",
    embedWidget: "Widget integreren",
