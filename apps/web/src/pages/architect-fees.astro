---

<BaseLayout
  title="Calculateur Honoraires Architecte Belgique | Belgian Architect Fee Calculator"
  description="Calculateur d'honoraires d'architecte belge basé sur la méthodologie BRADA. Free Belgian architect fee calculator. Widget gratuit et package npm."
>
  <article class="architect-fees-page">
    <nav class="lang-switcher">
      <button class="lang-btn active" data-lang="fr">FR</button>
      <button class="lang-btn" data-lang="nl">NL</button>
      <button class="lang-btn" data-lang="en">EN</button>
    </nav>

    <header class="page-header">
      <h1 id="pageTitle">{i18n.fr.title}</h1>
      <p class="subtitle" id="pageSubtitle">{i18n.fr.subtitle}</p>
    </header>

    <section class="calculator-section">
      <iframe
        src={iframeSrc}
        width="100%"
        height="550"
        frameborder="0"
        style="max-width: 500px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);"
        title="Belgian Architect Fee Calculator"
        loading="lazy"
      ></iframe>
    </section>

    <section class="info-section">
      <h2 id="howItWorksTitle">{i18n.fr.howItWorks}</h2>
      <p id="howItWorksText">{i18n.fr.howItWorksText}</p>
      <ul>
        <li><strong id="surfaceLabel">{i18n.fr.surfaceEstimate}</strong>: <span id="surfaceDesc">{i18n.fr.surfaceEstimateDesc}</span></li>
        <li><strong id="costLabel">{i18n.fr.costEstimate}</strong>: <span id="costDesc">{i18n.fr.costEstimateDesc}</span></li>
      </ul>
      <p id="finalFeeText">{i18n.fr.finalFee}</p>
    </section>

    <section class="embed-section">
      <h2 id="embedTitle">{i18n.fr.embedWidget}</h2>
      <p id="embedText">{i18n.fr.embedText}</p>
      <pre><code>{embedCode}</code></pre>
      <button class="copy-button" id="copyButton" data-copy="{i18n.fr.copyCode}" data-copied="{i18n.fr.copied}">{i18n.fr.copyCode}</button>
    </section>

    <section class="npm-section">
      <h2 id="npmTitle">{i18n.fr.npmPackage}</h2>
      <p id="npmText">{i18n.fr.npmText}</p>
      <pre><code>npm install architect-fees-be</code></pre>
      <pre><code>{`import { calculateHonoraires } from 'architect-fees-be';

const result = calculateHonoraires(2300, 3_000_000);
console.log(result.honoraireMoyen); // ~214,860€`}</code></pre>
      <div class="links">
        <a href={npmUrl} target="_blank" rel="noopener" class="link-button">npm</a>
        <a href={githubUrl} target="_blank" rel="noopener" class="link-button">GitHub</a>
        <a href="https://archimath.systeme-d.com/" target="_blank" rel="noopener" class="link-button">ArchiMath (original)</a>
      </div>
    </section>

    <section class="credits-section">
      <h2 id="creditsTitle">{i18n.fr.credits}</h2>
      <p id="creditsText">{i18n.fr.creditsText}</p>
      <ul>
        <li><span id="formulaCredits">{i18n.fr.formulaCredits}</span> <a href="https://archimath.systeme-d.com/" target="_blank" rel="noopener">ArchiMath</a> par Systeme-D</li>
        <li><span id="originalReport">{i18n.fr.originalReport}</span> <a href="https://archimath.systeme-d.com/BRADA_HET_RAPPORT_20160126_JR.pdf" target="_blank" rel="noopener">BRADA_HET_RAPPORT_20160126_JR.pdf</a></li>
      </ul>
    </section>
  </article>

  <script is:inline define:vars={{ i18n }}>
    const langButtons = document.querySelectorAll('.lang-btn');
    const copyButton = document.getElementById('copyButton');

    function setLanguage(lang) {
      const t = i18n[lang];

      document.getElementById('pageTitle').textContent = t.title;
      document.getElementById('pageSubtitle').textContent = t.subtitle;
      document.getElementById('howItWorksTitle').textContent = t.howItWorks;
      document.getElementById('howItWorksText').textContent = t.howItWorksText;
      document.getElementById('surfaceLabel').textContent = t.surfaceEstimate;
      document.getElementById('surfaceDesc').textContent = t.surfaceEstimateDesc;
      document.getElementById('costLabel').textContent = t.costEstimate;
      document.getElementById('costDesc').textContent = t.costEstimateDesc;
      document.getElementById('finalFeeText').textContent = t.finalFee;
      document.getElementById('embedTitle').textContent = t.embedWidget;
      document.getElementById('embedText').textContent = t.embedText;
      document.getElementById('npmTitle').textContent = t.npmPackage;
      document.getElementById('npmText').textContent = t.npmText;
      document.getElementById('creditsTitle').textContent = t.credits;
      document.getElementById('creditsText').textContent = t.creditsText;
      document.getElementById('formulaCredits').textContent = t.formulaCredits;
      document.getElementById('originalReport').textContent = t.originalReport;

      if (copyButton) {
        copyButton.textContent = t.copyCode;
        copyButton.dataset.copy = t.copyCode;
        copyButton.dataset.copied = t.copied;
      }

      langButtons.forEach(btn => {
        btn.classList.toggle('active', btn.dataset.lang === lang);
      });

      localStorage.setItem('architect-fees-lang', lang);
    }

    langButtons.forEach(btn => {
      btn.addEventListener('click', () => setLanguage(btn.dataset.lang));
    });

    if (copyButton) {
      copyButton.addEventListener('click', async () => {
        const code = document.querySelector('.embed-section code')?.textContent;
        if (code) {
          await navigator.clipboard.writeText(code);
          const copiedText = copyButton.dataset.copied;
          const copyText = copyButton.dataset.copy;
          copyButton.textContent = copiedText;
          setTimeout(() => {
            copyButton.textContent = copyText;
          }, 2000);
        }
      });
    }

    // Restore saved language
    const savedLang = localStorage.getItem('architect-fees-lang');
    if (savedLang && i18n[savedLang]) {
      setLanguage(savedLang);
    }
  </script>
</BaseLayout>

<style>
  .architect-fees-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .lang-switcher {
    display: flex;
    justify-content: center;
