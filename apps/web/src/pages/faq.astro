---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="FAQ - Questions Fréquentes | Ferme du Temple - Collectif Beaver"
  description="Réponses aux questions fréquentes sur le projet d'habitat partagé de la Ferme du Temple. Informations pour les candidats intéressés par notre communauté."
>
  <div class="faq-container">
    <iframe
      src="https://docs.google.com/document/d/e/2PACX-1vTetSyJwv0t7ddFhkMsNq8MBgyYjS-IpR1zo730pjZf-VRgWXknquVksHMaZCHpN2kNVzmUqV2xyPAN/pub?embedded=true"
      title="FAQ - Réponses aux candidats"
      frameborder="0"
      allowfullscreen
    ></iframe>
  </div>
</BaseLayout>

<style>
  .faq-container {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .faq-container iframe {
    flex: 1;
    width: 100%;
    min-height: 100vh;
    border: none;
  }
</style>
