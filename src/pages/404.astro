---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Non Trouvée | Ferme du Temple">
  <div class="min-h-screen flex items-center justify-center bg-background">
    <div class="text-center px-4">
      <h1 class="text-6xl font-display font-bold text-rich-black mb-4">404</h1>
      <p class="text-xl text-rich-black/70 mb-8">Page non trouvée</p>
      <a
        href="/"
        class="inline-block px-8 py-3 bg-magenta text-white font-medium hover:bg-magenta/90 transition-colors"
      >
        Retour à l'accueil
      </a>
    </div>
  </div>
</BaseLayout>
